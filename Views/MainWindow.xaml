<Window x:Class="ListViewTryout.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ListViewTryout.Views"
        xmlns:vm="clr-namespace:ListViewTryout.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <vm:MusicGroupViewModel x:Key="AccessGroupViewModel" />
        <vm:AnimalGroupViewModel x:Key="AnimalGroupViewModel" />
    </Window.Resources>
    <Grid>
        <TabControl Background="LightGray">
            <TabItem Header="Music Groups">
                <views:GenericGroupView ViewModel="{StaticResource AccessGroupViewModel}"/>
            </TabItem>
            <TabItem Header="Animal Groups">
                <views:GenericGroupView ViewModel="{StaticResource AnimalGroupViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
